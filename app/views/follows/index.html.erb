<h2> Follow Up Schedule index</h2>
<div>
<%= link_to "Add an Day", new_follow_path %>
</div>
<table >
  <thead >
  <tr>
    <th>day</th>
    <th>Name</th>
    <th>cough</th>
    <th>fever</th>
    <th>breath</th>
    <th>people</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
</thead>
<tbody>
<% @follows.each do |follow|%>
<tr>
<td><%= follow.id %></td>
<td><%= follow.user.name %></td>
<td><%= follow.cough %></td>
<td><%= follow.fever %></td>
<td><%= follow.breath %></td>
<td><%= follow.people %></td>
<td><%= link_to 'Edit', edit_follow_path(follow) %></td>
<td><%= link_to 'Destroy', follow,
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
</tr>
<% end %>
</tbody>
</table>